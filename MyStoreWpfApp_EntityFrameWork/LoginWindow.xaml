<Window x:Class="MyStoreWpfApp_EntityFramework.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyStoreWpfApp_EntityFramework"
        mc:Ignorable="d"
        Title="Đăng nhập hệ thống" Height="300" Width="625">
    <Grid>
        <Label Content="Đăng nhập hệ thống" FontSize="30" HorizontalAlignment="Left" Margin="196,19,0,0" VerticalAlignment="Top">
            <Label.Background>
                <LinearGradientBrush>
                    <GradientStop Color="Yellow" Offset="0.0"/>
                    <GradientStop Color="Red" Offset="0.5"/>
                    <GradientStop Color="Green" Offset="1.0"/>
                </LinearGradientBrush>
            </Label.Background>
        </Label>
        <Label Content="Email :" FontSize="20" HorizontalAlignment="Left" Margin="70,99,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtEmail" FontSize="20" HorizontalAlignment="Left" Margin="175,107,0,0" TextWrapping="Wrap" Text="admin@CompanyName.com" VerticalAlignment="Top" Width="435"/>
        <Label Content="Password :" FontSize="20" HorizontalAlignment="Left" Margin="70,157,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="txtPassword" Password="@1" FontSize="20" HorizontalAlignment="Left" Margin="176,165,0,0" VerticalAlignment="Top" Width="434"/>
        <Button x:Name="btnDangNhap" Content="Đăng nhập" FontSize="20" HorizontalAlignment="Left" Margin="176,213,0,0" VerticalAlignment="Top" Width="136" Height="41" Click="btnDangNhap_Click"/>
        <Button x:Name="btnThoat" Content="Thoát" FontSize="20" HorizontalAlignment="Left" Margin="474,213,0,0" VerticalAlignment="Top" Width="136" Height="41"/>

    </Grid>
</Window>

<Window x:Class="HelloWpfApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWpfApp"
        mc:Ignorable="d"
        Title="Đăng nhập hệ thống" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Đăng nhập hệ thống quản trị" HorizontalAlignment="Left" Margin="180,74,0,0" VerticalAlignment="Top" RenderTransformOrigin="-3.583,-0.39" Background="{x:Null}" Foreground="#FF2BA033" FontWeight="Bold" FontSize="25"/>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="43,140,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="42" Width="131" FontSize="20" Background="White">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.205"/>
                    <TranslateTransform X="0.128" Y="-0.295"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <TextBox x:Name="txtUserName" HorizontalAlignment="Left" Margin="231,147,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" TextChanged="TextBox_TextChanged" RenderTransformOrigin="0.5,0.5" Height="29">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.205"/>
                    <TranslateTransform X="0.127" Y="0.138"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="49,205,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="41" Width="125" FontSize="20">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.205"/>
                    <TranslateTransform X="-0.016" Y="-0.291"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="230,211,0,0" VerticalAlignment="Top" Width="240" RenderTransformOrigin="0.5,0.5" Height="29">
            <PasswordBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.205"/>
                    <TranslateTransform X="-0.016" Y="0.138"/>
                </TransformGroup>
            </PasswordBox.RenderTransform>
        </PasswordBox>
        <Button x:Name="btnDangNhap" Content="Đăng nhập" HorizontalAlignment="Left" Margin="202,264,0,0" VerticalAlignment="Top" Click="Button_Click" Width="131" RenderTransformOrigin="0.5,0.5" Height="33">
            <Button.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FFFF2F2F" Offset="1"/>
                </LinearGradientBrush>
            </Button.Foreground>
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FF68FF63" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.205"/>
                    <TranslateTransform X="-0.138" Y="-0.011"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="btnThoat" Content="Thoát" HorizontalAlignment="Left" Margin="376,265,0,0" VerticalAlignment="Top" Click="Button_Click_1" Width="129" RenderTransformOrigin="0.359,0.453" Height="32">
            <Button.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FFFF1560" Offset="1"/>
                </LinearGradientBrush>
            </Button.Foreground>
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FFEAC2C2" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.205"/>
                    <TranslateTransform X="-0.135" Y="0.264"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>

    </Grid>
</Window>
